<div id="login_bar">
  <%= erb :'partials/login' %>
</div>
<div id="spacer" class="spacer">
  <div id="loader" class="interface loader">
    <form>
      <select id="dropdown">
        <% @all_sprites.each do |sprite|%>
          <option value=<%= sprite.id %>><%= sprite.id.to_s + ": " + sprite.name%></option>
        <% end %>
      </select>
    </form>
    <button id="load_button" class="load">Load this drawing.</button>
    <br>
    <button id="clear_button" class="clear">Clear the canvas.</button>
  </div>
  <div id="pallette" class="interface pallete">
    <div class="swatch" id="highlight"></div>
    <div class="swatch" id="midtone"></div>
    <div class="swatch" id="shadow"></div>
  </div>
  <div id="canvas" class="interface canvas">
    <div id="grid" class="grid">
      <% 16.times do |y|%>
        <div id="<%='row' + y.to_s%>" class="row">
          <% 16.times do |x| %>
            <div id="<%='x'+ x.to_s + 'y' + y.to_s%>" class="pixel"></div>
          <% end %>
        </div>
      <% end %>
    </div>
      <form class="saver">
        <input type="text" name="name" id="name_field" value="Name your drawing!">
        <button id="save_button" class="save">Save this drawing.</button>
      </form>
  </div>
</div>